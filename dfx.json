{
  "dfx": "0.28.0",
  "version": 1,
  "canisters": {
    "backend": {
      "type": "motoko",
      "main": "src/backend/main.mo"
    },
    "frontend": {
      "type": "assets",
      "source": ["src/frontend/dist"],
      "build": ["pnpm -C src/frontend install", "pnpm -C src/frontend build"]
    }
  },
  "networks": {
    "local": {
      "bind": "127.0.0.1:8000",
      "type": "ephemeral"
    }
  },
  "defaults": {
    "build": {
      "packtool": ""
    }
  }
}
